TARGET = @PACKAGE_NAME@

SRCS := $(wildcard *.c)
OBJS := $(patsubst %.c,%.o,$(SRCS))

CC = @CC@
CFLAGS = @CFLAGS@ -Wall
DEFS = @DEFS@
LIBS = @LIBS@
INSTALL = @INSTALL@
INSTALLDIR = @prefix@/bin

RM = rm -f
STRIP = strip

# Windows
EXECUTABLEEXTENSION =
ifeq ($(shell echo $(OS)),Windows_NT)
  EXECUTABLEEXTENSION := .exe
endif

OUTPUT = $(TARGET)$(EXECUTABLEEXTENSION)

all: dcdis

dcdis: $(OBJS)
	$(CC) $(CFLAGS) $(DEFS) -o $(OUTPUT) $(OBJS) $(LIBS)

%.o: %.c
	$(CC) $(CFLAGS) $(DEFS) -c $< -o $@

install: dcdis
	$(STRIP) $(OUTPUT)
	mkdir -p $(INSTALLDIR)
	$(INSTALL) -m 755 $(OUTPUT) $(INSTALLDIR)

uninstall:
	$(RM) $(INSTALLDIR)/$(OUTPUT)

clean:
	$(RM) $(OBJS)

distclean: clean
	$(RM) $(OUTPUT)

reset: distclean
	$(RM) config.log config.h config.status Makefile
